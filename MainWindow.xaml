<Window x:Class="MusicPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Music Player" Height="200" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Welcome to Music Player" FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>
            <Button Content="Login" Click="LoginButton_Click" Margin="0,5"/>
            <Button Content="Register" Click="RegisterButton_Click" Margin="0,5"/>
        </StackPanel>
    </Grid>
</Window>
