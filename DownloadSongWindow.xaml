<Window x:Class="MusicPlayer.DownloadSongWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Download Song" Height="300" Width="500">
    <StackPanel Margin="20">
        <TextBlock Text="Song URL:" FontWeight="Bold" />
        <TextBox Name="SongUrlTextBox" Margin="0,5,0,10" />
        <TextBlock Text="Song Title:" FontWeight="Bold" />
        <TextBox Name="SongTitleTextBox" Margin="0,5,0,10" />
        <TextBlock Text="Artist:" FontWeight="Bold" />
        <TextBox Name="ArtistTextBox" Margin="0,5,0,10" />
        <Button Content="Download" Click="DownloadButton_Click" Margin="0,10,0,0"/>
    </StackPanel>
</Window>
