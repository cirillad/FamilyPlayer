<Window x:Class="MusicPlayer.DownloadSongWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Download Song" Height="150" Width="300">
    <StackPanel Margin="10">
        <TextBlock Text="Enter song URL:" Margin="5"/>
        <TextBox Name="UrlTextBox" Margin="5"/>
        <Button Content="Download" Click="DownloadButton_Click" Margin="5"/>
    </StackPanel>
</Window>
