<Window x:Class="MusicPlayer.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="320" Width="300">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Login" FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>
            <TextBlock Text="Username:" FontWeight="Bold"/>
            <TextBox Name="UsernameTextBox" Margin="0,5,0,10"/>
            <TextBlock Text="Password:" FontWeight="Bold"/>
            <PasswordBox Name="PasswordTextBox" Margin="0,5,0,10"/>
            <Button Content="Login" Click="LoginButton_Click" Margin="0,10,0,0"/>
            <Button Name="BackButton" Content="Back" Click="BackButton_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
