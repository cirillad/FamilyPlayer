<Window x:Class="MusicPlayer.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Main Menu" Height="300" Width="400">
    <Grid>
        <Button Content="All Songs" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" Click="AllSongsButton_Click"/>
        <Button Content="Favorite Songs" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,50" Width="150" Click="FavoriteSongsButton_Click"/>
        <Button Content="Back" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Width="75" Click="BackButton_Click"/>
    </Grid>
</Window>
